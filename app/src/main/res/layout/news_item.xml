<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="4dp"

    android:foreground="?attr/selectableItemBackground"
    app:cardElevation="4dp"
    card_view:cardPreventCornerOverlap="false"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/news_image"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:scaleType="fitXY"
        android:background="@color/colorPrimary"
        tools:src="@drawable/cinema_new"
        android:layout_marginRight="16dp"
        android:contentDescription="@string/image_dec"

         />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/news_image"
            android:layout_toRightOf="@id/news_image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/news_title"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginEnd="@dimen/text_margin"
                android:layout_marginRight="@dimen/text_margin"
                android:maxLines="4"
                android:text="@string/news_title"
                android:textStyle="bold"
                android:textAppearance="?attr/textAppearanceListItem" />

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">

                <ImageView
                    android:id="@+id/clock_image"
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:paddingRight="5dp"
                    android:paddingTop="7dp"
                    android:src="@drawable/ic_alarm_black_24dp"
                    />

                <TextView
                    android:id="@+id/news_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:layout_gravity="center"
                    android:maxLength="22"
                    android:textSize="17sp"
                    android:layout_toRightOf="@id/clock_image"

                    android:text="@string/news_date"
                    android:layout_alignTop="@+id/clock_image" />

           </LinearLayout>

            </LinearLayout>




</RelativeLayout>

</android.support.v7.widget.CardView>